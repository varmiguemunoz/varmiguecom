---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Community from '@/components/Community.astro';
import social from '@/config/social.json';
---

<Layout>
  <Header />
  {
    social.config.map(({ maintitle, data }) => (
      <div class="mb-10 flex flex-col gap-8">
        <h2 class="text-xl font-bold text-white">{maintitle}</h2>

        {data.map(({ title, description, icon, url }) => (
          <Community title={title} description={description} icon={icon} url={url} />
        ))}
      </div>
    ))
  }
</Layout>
